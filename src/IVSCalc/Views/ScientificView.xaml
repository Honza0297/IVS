<UserControl x:Class="IVSCalc.Views.ScientificView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:IVSCalc.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:MainViewModel}"
             DataContext="{Binding Source={StaticResource ViewModelLocator}, Path=MainViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Background="AliceBlue">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Height="Auto" MinWidth="100" Content="Basic" Background="#2b3cab" Foreground="White" Command="{Binding ChangeViewCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
                <TextBlock Grid.Column="1" Text="{Binding Calculation, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="36" Margin="5 5 5 5"
                           Foreground="Gray"/>
            </Grid>
            <Separator></Separator>
            <Grid>
                <Border CornerRadius="10" Background="Red" Visibility="{Binding ErrorVisibility, UpdateSourceTrigger=PropertyChanged}">
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="{Binding ErrorText, UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontSize="16" Margin="5 5 5 5"/>
                </Border>
                <TextBlock Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="40" Margin="5 5 5 5"/>
            </Grid>
        </StackPanel>
        <Grid Grid.Row="1" Background="#2b3cab">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Content="{Binding NumeralSystem, UpdateSourceTrigger=PropertyChanged}" Height="Auto" FontSize="20" Foreground="White" Background="Transparent"
                    BorderBrush="Transparent" Command="{Binding ChangeNumeralSystemCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="1" Grid.Row="0" Content="{Binding GoniometricUnits, UpdateSourceTrigger=PropertyChanged}" Height="Auto" FontSize="20" Foreground="White" Background="Transparent"
                    BorderBrush="Transparent" Command="{Binding ChangeGoniometricUnitsCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="2" Grid.Row="0" Content="π" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="pi"/>
            <Button Grid.Column="3" Grid.Row="0" Content="𝑒" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="e"/>
            <Button Grid.Column="4" Grid.Row="0" Height="Auto" Command="{Binding RemovePressCommand}" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/backspace.png" Stretch="None"/>
            </Button>
            <Button Grid.Column="5" Grid.Row="0" Content="C" Height="Auto" FontSize="20" Foreground="White" Command="{Binding ClearPressCommand}"
                    Background="Transparent" BorderBrush="Transparent"/>


            <Button Grid.Column="0" Grid.Row="1" Content="sin" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding OperatorPressCommand}" CommandParameter="sin"/>
            <Button Grid.Column="1" Grid.Row="1" Content="cos" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding OperatorPressCommand}" CommandParameter="cos"/>
            <Button Grid.Column="2" Grid.Row="1" Content="tg" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding OperatorPressCommand}" CommandParameter="tg"/>
            <Button Grid.Column="3" Grid.Row="1" Content="cotg" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding OperatorPressCommand}" CommandParameter="cotg"/>
            <Button Grid.Column="4" Grid.Row="1" Content="| x |" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding OperatorPressCommand}" CommandParameter="abs"/>
            <Button Grid.Column="5" Grid.Row="1" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="plot" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/plot.png" Stretch="None"/>
            </Button>

            <Button Grid.Column="0" Grid.Row="2" Content="7" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="1" Grid.Row="2" Content="8" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="2" Grid.Row="2" Content="9" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="3" Grid.Row="2" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="+" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/plus.png" Stretch="None"/>
            </Button>
            <Button Grid.Column="4" Grid.Row="2" Content="log" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding OperatorPressCommand}" CommandParameter="log"/>
            <Button Grid.Column="5" Grid.Row="2" Content="ln" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding OperatorPressCommand}" CommandParameter="ln"/>

            <Button Grid.Column="0" Grid.Row="3" Content="4" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="1" Grid.Row="3" Content="5" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="2" Grid.Row="3" Content="6" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="3" Grid.Row="3" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="-" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/minus.png" Stretch="None"/>
            </Button>
            <Button Grid.Column="4" Grid.Row="3" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="^2" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/format-superscript.png" Stretch="None"/>
            </Button>
            <Button Grid.Column="5" Grid.Row="3" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="√" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/square-root.png" Stretch="None"/>
            </Button>
            <Button Grid.Column="0" Grid.Row="4" Content="1" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="1" Grid.Row="4" Content="2" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="2" Grid.Row="4" Content="3" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="3" Grid.Row="4" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="*" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/multiplication.png" Stretch="None"/>
            </Button>
            <Button Grid.Column="4" Grid.Row="4" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="^" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/exponent.png" Stretch="None"/>
            </Button>
            <Button Grid.Column="5" Grid.Row="4" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="√" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/root.png" Stretch="Uniform" Height="38"/>
            </Button>
            <Button Grid.Column="0" Grid.Row="5" Content="rand" Height="Auto" FontSize="20" Foreground="White" Command="{Binding OperatorPressCommand}"
                    CommandParameter="rand" Background="Transparent" BorderBrush="Transparent"/>
            <Button Grid.Column="1" Grid.Row="5" Content="0" Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="2" Grid.Row="5" Content="," Height="Auto" FontSize="20" Foreground="White" Background="Transparent" BorderBrush="Transparent"
                    Command="{Binding NumberPressCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Content}"/>
            <Button Grid.Column="3" Grid.Row="5" Height="Auto" Command="{Binding OperatorPressCommand}" CommandParameter="/" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/division.png" Stretch="None"/>
            </Button>
            <Button Grid.Column="4" Grid.Row="5" Content="fact" Height="Auto" FontSize="20" Foreground="White" Command="{Binding OperatorPressCommand}"
                    CommandParameter="!" Background="Transparent" BorderBrush="Transparent"/>
            <Button Grid.Column="5" Grid.Row="5" Height="Auto" Command="{Binding SolvePressCommand}" Background="Transparent" BorderBrush="Transparent">
                <Image Source="/Icons/equal.png" Stretch="None"/>
            </Button>
        </Grid>
    </Grid>
</UserControl>
